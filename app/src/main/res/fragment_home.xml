<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" android:layout_width="match_parent"
    android:layout_height="match_parent" android:orientation="vertical" android:weightSum="10"
    tools:context=".HomeFragment" xsi:schemaLocation="http://schemas.android.com/tools ">

    <RelativeLayout android:layout_width="match_parent" android:layout_height="0dp"
        android:layout_weight="2">

        <TextView android:id="@+id/textView2" android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:text="Wellcome" android:textSize="30sp"
            app:fontFamily="@font/baloo" />

        <ImageView android:id="@+id/imageView" android:layout_width="100dp"
            android:layout_height="100dp" android:layout_toRightOf="@id/textView2"
            android:src="@drawable/images" />
    </RelativeLayout>

    <GridLayout android:layout_width="match_parent" android:layout_height="0dp"
        android:layout_weight="8" android:alignmentMode="alignMargins" android:columnCount="2"
        android:columnOrderPreserved="false" android:rowCount="2"
        tools:targetApi="ice_cream_sandwich">

        <androidx.cardview.widget.CardView android:id="@+id/passcard" android:layout_width="0dp"
            android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1"
            android:layout_marginLeft="16dp" android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp" android:elevation="8dp" app:cardCornerRadius="8dp">

            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp" android:orientation="vertical">

                <ImageView android:id="@+id/passimageView" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/passiconi" />

                <TextView android:id="@+id/passtextView" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:gravity="center_horizontal"
                    android:text="Passport Services" android:textSize="18sp"
                    android:textStyle="bold|italic" app:fontFamily="@font/aclonica" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView android:id="@+id/visacard" android:layout_width="0dp"
            android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1"
            android:layout_marginLeft="16dp" android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp" android:elevation="8dp" app:cardCornerRadius="8dp">

            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp" android:orientation="vertical">

                <ImageView android:id="@+id/visaimage" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/vicon" />

                <TextView android:id="@+id/visatextView" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:gravity="center_horizontal"
                    android:text="Visa Services" android:textSize="18sp"
                    android:textStyle="bold|italic" app:fontFamily="@font/aclonica" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView android:id="@+id/locationcard" android:layout_width="0dp"
            android:layout_height="0dp" android:layout_rowWeight="1" android:layout_columnWeight="1"
            android:layout_marginLeft="16dp" android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp" android:elevation="8dp" app:cardCornerRadius="8dp">

            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp" android:orientation="vertical">

                <ImageView android:id="@+id/locationimageView" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/passiconi" />

                <TextView android:id="@+id/locationtextView" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:gravity="center_horizontal"
                    android:text="Passport Services" android:textSize="18sp"
                    android:textStyle="bold|italic" app:fontFamily="@font/aclonica" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView android:id="@+id/informationcard"
            android:layout_width="0dp" android:layout_height="0dp" android:layout_rowWeight="1"
            android:layout_columnWeight="1" android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp" android:layout_marginBottom="16dp"
            android:elevation="8dp" app:cardCornerRadius="8dp">

            <LinearLayout android:layout_width="wrap_content" android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_margin="16dp" android:orientation="vertical">

                <ImageView android:id="@+id/informationimage" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:layout_centerHorizontal="true"
                    app:srcCompat="@drawable/vicon" />

                <TextView android:id="@+id/nformationtextView" android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:gravity="center_horizontal"
                    android:text="Visa Services" android:textSize="18sp"
                    android:textStyle="bold|italic" app:fontFamily="@font/aclonica" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </GridLayout>
</LinearLayout>