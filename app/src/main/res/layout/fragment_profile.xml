<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primarytheme1"
    tools:ignore="ScrollViewCount"
    android:orientation="vertical"
    tools:context=".drawerMenuFragments.ProfileFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">

            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/profile_iv"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ic_profile"
                app:civ_border_color="#FFFFFF"
                app:civ_border_width="2dp" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profile_username_TV"
                android:layout_below="@+id/profile_iv"
                android:layout_centerHorizontal="true"
                android:layout_gravity="center"
                android:layout_marginVertical="0dp"
                android:drawableTint="@color/black"
                android:gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:text="@string/username"
                android:textColor="@color/white"
                android:textSize="30sp"
                tools:targetApi="m" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg"
            android:orientation="vertical"
            android:padding="20dp">

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:gravity="center_horizontal"
                android:fontFamily="@font/roboto_black"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:text="@string/My_detail"
                android:textSize="40sp"
                tools:targetApi="o" />

            <View
                android:id="@+id/profile_v1"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:background="@color/black" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_horizontal"
                android:text="FullName"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25sp"
                tools:targetApi="o" />
            <!--        <view-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="2dp"-->
            <!--            android:background="@color/black"/>-->
            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profile_fullname_TV"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"
                android:clickable="true"
                android:drawableStart="@drawable/ic_person"
                android:fontFamily="@font/roboto_regular"
                android:drawableLeft="@drawable/ic_person"
                android:drawablePadding="0dp"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:text="@string/full_name"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:ignore="DuplicateIds"
                tools:targetApi="o" />

            <View
                android:id="@+id/profile_v"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:background="@color/black" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_horizontal"
                android:text="Email"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25sp"
                tools:targetApi="o" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profile_email_TV"
                android:layout_marginVertical="10dp"
                android:clickable="true"
                android:drawableStart="@drawable/ic_email"
                android:drawableLeft="@drawable/ic_email"
                android:drawablePadding="0dp"
                android:gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:paddingHorizontal="15dp"
                android:text="@string/email"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:targetApi="o" />

            <View
                android:id="@+id/profile_v2"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:background="@color/black"
                tools:ignore="DuplicateIds" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_horizontal"
                android:text="Phone Number"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25sp"
                tools:targetApi="o" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profile_phone_TV"
                android:layout_marginVertical="10dp"
                android:clickable="true"
                android:drawableStart="@drawable/ic_phone"
                android:drawableLeft="@drawable/ic_phone"
                android:drawablePadding="0dp"
                android:gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:paddingHorizontal="15dp"
                android:text="@string/phone"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:targetApi="o" />

            <View
                android:id="@+id/profile_v3"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/black"
                tools:ignore="DuplicateIds" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center_horizontal"
                android:text="User ID"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="25sp"
                tools:targetApi="o" />

            <com.google.android.material.textview.MaterialTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/profile_userid_TV"
                android:layout_gravity="center"
                android:layout_marginVertical="10dp"
                android:clickable="true"
                android:drawableStart="@drawable/ic_person"
                android:drawableLeft="@drawable/ic_person"
                android:drawablePadding="0dp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:paddingHorizontal="15dp"
                android:text="User Id"
                android:textColor="@color/black"
                android:textSize="20sp"
                tools:targetApi="o" />

            <View
                android:id="@+id/userid_v"
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginBottom="10dp"
                android:background="@color/black" />

            <!--        <com.google.android.material.button.MaterialButton-->
            <!--            android:layout_width="match_parent"-->
            <!--            android:layout_height="wrap_content"-->
            <!--            android:layout_gravity="center_horizontal"-->
            <!--            android:layout_marginVertical="10dp"-->
            <!--            android:backgroundTint="@color/secondarytheme2"-->
            <!--            android:gravity="center_horizontal"-->
            <!--            android:text="change Profile"-->
            <!--            android:textAlignment="center"-->
            <!--            android:textSize="30sp"-->
            <!--            app:cornerRadius="10dp" />-->
        </LinearLayout>
    </LinearLayout>
</ScrollView>