<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="10"
    android:background="@color/primarytheme1"
    android:orientation="vertical"
    tools:context=".ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/profile_iv"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_centerInParent="true"
            android:background="@drawable/border_oval"
            android:backgroundTint="@color/white"
            android:src="@drawable/ic_profile"
            tools:targetApi="lollipop" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/profile_iv"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:drawableTint="@color/black"
            android:gravity="center"
            android:paddingHorizontal="40dp"
            android:text="@string/username"
            android:textColor="@color/white"
            android:textSize="30sp"
            tools:targetApi="m" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="7"
        android:background="@drawable/bg"
        android:orientation="vertical"
        android:padding="20dp">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:gravity="center_horizontal"
            android:text="@string/your_detail"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="40sp"
            tools:targetApi="o" />
        <!--        <view-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="2dp"-->
        <!--            android:background="@color/black"/>-->
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginVertical="10dp"
            android:drawableStart="@drawable/ic_person"
            android:drawableLeft="@drawable/ic_person"
            android:drawablePadding="0dp"
            android:gravity="center"
            android:paddingHorizontal="60dp"
            android:text="@string/full_name"
            android:textColor="@color/black"
            android:textSize="25sp"
            tools:targetApi="o" />

        <View
            android:id="@+id/profile_v"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="10dp"
            android:background="@color/black" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:drawableStart="@drawable/ic_email"
            android:drawableLeft="@drawable/ic_email"
            android:drawablePadding="0dp"
            android:gravity="center"
            android:paddingHorizontal="60dp"
            android:text="@string/email"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            tools:targetApi="o" />

        <View
            android:id="@+id/profile_v2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="10dp"
            android:background="@color/black"
            tools:ignore="DuplicateIds" />

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            android:drawableStart="@drawable/ic_phone"
            android:drawableLeft="@drawable/ic_phone"
            android:drawablePadding="0dp"
            android:gravity="center"
            android:paddingHorizontal="60dp"
            android:text="@string/phone"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="25sp"
            tools:targetApi="o" />

        <View
            android:id="@+id/profile_v3"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/black"
            tools:ignore="DuplicateIds" />

        <!--        <com.google.android.material.button.MaterialButton-->
        <!--            android:layout_width="match_parent"-->
        <!--            android:layout_height="wrap_content"-->
        <!--            android:layout_gravity="center_horizontal"-->
        <!--            android:layout_marginVertical="10dp"-->
        <!--            android:backgroundTint="@color/secondarytheme2"-->
        <!--            android:gravity="center_horizontal"-->
        <!--            android:text="change Profile"-->
        <!--            android:textAlignment="center"-->
        <!--            android:textSize="30sp"-->
        <!--            app:cornerRadius="10dp" />-->
    </LinearLayout>
</LinearLayout>