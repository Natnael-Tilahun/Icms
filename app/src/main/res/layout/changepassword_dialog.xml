<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="10dp"
    android:orientation="vertical"
    android:padding="20dp"
    app:cardCornerRadius="20dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_bold"
        android:gravity="center_horizontal"
        android:padding="10dp"
        android:text="Change Password"
        android:textAlignment="center"
        android:textColor="@color/primarytheme1"
        android:textSize="25dp" />

    <EditText
        android:id="@+id/changepasswordialogoldpass_ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:inputType="numberPassword"
        android:layout_marginTop="50dp"
        android:fontFamily="@font/roboto_medium"
        android:hint="Enter old password"

        android:padding="10dp"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/changepasswordialognewpass_ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="100dp"
        android:fontFamily="@font/roboto_medium"
        android:inputType="numberPassword"
        android:hint="Enter new password"
        android:padding="10dp"
        android:textSize="18sp" />

    <EditText
        android:id="@+id/changepasswordialogconfirmpass_ET"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginTop="150dp"
        android:inputType="numberPassword"
        android:fontFamily="@font/roboto_medium"
        android:hint="Confirm password"
        android:padding="10dp"
        android:textSize="18sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="200dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="10dp">

        <Button
            android:id="@+id/changepassworddialogsave_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:backgroundTint="@color/primarytheme1"
            android:fontFamily="@font/roboto_medium"
            android:gravity="start"
            android:paddingHorizontal="20dp"
            android:text="Save"
            android:textSize="17sp" />

        <Button
            android:id="@+id/changepassworddialogcancel_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:backgroundTint="@color/primarytheme1"
            android:fontFamily="@font/roboto_medium"
            android:gravity="end"
            android:text="Cancel"
            android:textSize="16sp" />
    </LinearLayout>

</com.google.android.material.card.MaterialCardView>