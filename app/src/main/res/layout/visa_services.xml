<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primarytheme1"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="ScrollViewCount">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:weightSum="10">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingVertical="15dp"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:text="@string/visa_sevices_tv"
                android:textColor="@android:color/white"
                android:textSize="40sp"
                app:fontFamily="@font/baloo" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="8"
            android:background="@drawable/bg2"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="35dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/tourist_visa"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginVertical="5dp"
                android:background="@android:color/white"
                android:padding="0dp"
                android:shadowRadius="@android:integer/config_longAnimTime"
                android:text="@string/tourist_visa_online"
                android:textColor="@color/primarytheme1"
                android:textSize="23sp"
                app:cornerRadius="20dp"
                app:strokeColor="@color/primarytheme1"
                app:strokeWidth="3dp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginVertical="0dp"
                android:background="@android:color/white"
                android:padding="0dp"
                android:shadowRadius="@android:integer/config_longAnimTime"
                android:text="@string/tourist_visa_on_arrival"
                android:textColor="@color/primarytheme1"
                android:textSize="23sp"
                app:cornerRadius="20dp"
                app:strokeColor="@color/primarytheme1"
                app:strokeWidth="3dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="@string/business_visa"
                android:textColor="@android:color/black"
                android:textSize="30sp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginVertical="5dp"
                android:background="@android:color/white"
                android:padding="0dp"
                android:shadowRadius="@android:integer/config_longAnimTime"
                android:text="@string/confrence_visa"
                android:textColor="@color/primarytheme1"
                android:textSize="23sp"
                app:cornerRadius="20dp"
                app:strokeColor="@color/primarytheme1"
                app:strokeWidth="3dp" />
            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginVertical="0dp"
                android:background="@android:color/white"
                android:padding="0dp"
                android:shadowRadius="@android:integer/config_longAnimTime"
                android:text="@string/investment_visa"
                android:textColor="@color/primarytheme1"
                android:textSize="23sp"
                app:cornerRadius="20dp"
                app:strokeColor="@color/primarytheme1"
                app:strokeWidth="3dp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginVertical="0dp"
                android:background="@android:color/white"
                android:padding="0dp"
                android:shadowRadius="@android:integer/config_longAnimTime"
                android:text="@string/foreign_business_firm_employment_visa"
                android:textColor="@color/primarytheme1"
                android:textSize="20sp"
                app:cornerRadius="20dp"
                app:strokeColor="@color/primarytheme1"
                app:strokeWidth="3dp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginVertical="0dp"
                android:background="@android:color/white"
                android:padding="0dp"
                android:shadowRadius="@android:integer/config_longAnimTime"
                android:text="@string/journalist_visa"
                android:textColor="@color/primarytheme1"
                android:textSize="20sp"
                app:cornerRadius="20dp"
                app:strokeColor="@color/primarytheme1"
                app:strokeWidth="3dp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginVertical="0dp"
                android:background="@android:color/white"
                android:padding="0dp"
                android:shadowRadius="@android:integer/config_longAnimTime"
                android:text="@string/ethiopian_private_business_firm_work_visa"
                android:textColor="@color/primarytheme1"
                android:textSize="20sp"
                app:cornerRadius="20dp"
                app:strokeColor="@color/primarytheme1"
                app:strokeWidth="3dp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginVertical="0dp"
                android:background="@android:color/white"
                android:padding="0dp"
                android:shadowRadius="@android:integer/config_longAnimTime"
                android:text="@string/international_organization_work_visa"
                android:textColor="@color/primarytheme1"
                android:textSize="20sp"
                app:cornerRadius="20dp"
                app:strokeColor="@color/primarytheme1"
                app:strokeWidth="3dp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginVertical="0dp"
                android:background="@android:color/white"
                android:padding="0dp"
                android:shadowRadius="@android:integer/config_longAnimTime"
                android:text="@string/government_institutions_short_work_visa"
                android:textColor="@color/primarytheme1"
                android:textSize="20sp"
                app:cornerRadius="20dp"
                app:strokeColor="@color/primarytheme1"
                app:strokeWidth="3dp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginVertical="0dp"
                android:background="@android:color/white"
                android:padding="0dp"
                android:shadowRadius="@android:integer/config_longAnimTime"
                android:text="@string/ngo_work_visa"
                android:textColor="@color/primarytheme1"
                android:textSize="20sp"
                app:cornerRadius="20dp"
                app:strokeColor="@color/primarytheme1"
                app:strokeWidth="3dp" />

            <com.google.android.material.button.MaterialButton
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginVertical="0dp"
                android:background="@android:color/white"
                android:padding="0dp"
                android:shadowRadius="@android:integer/config_longAnimTime"
                android:text="@string/ethiopian_government_employment_visa"
                android:textColor="@color/primarytheme1"
                android:textSize="20sp"
                app:cornerRadius="20dp"
                app:strokeColor="@color/primarytheme1"
                app:strokeWidth="3dp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>